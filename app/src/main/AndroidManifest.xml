<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aditya.velorannotes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/velorant_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VeloranNotes">
        <activity android:name=".swipe.SwipeSelectionActivity"></activity>
        <activity
            android:name=".DevActivity"
            android:label="Developer Info"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash_Screen_Activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteUpdateActivity"
            android:label="Edit Note"
            android:parentActivityName=".ViewFolderContentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewNoteContentActivity"
            android:parentActivityName=".ViewFolderContentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddNoteActivity"
            android:label="Add Note"
            android:parentActivityName=".ViewFolderContentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FolderUpdateNameActivity"
            android:label="Change Folder Name"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ViewFolderContentsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddFolderActivity"
            android:label="Add Folder"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>